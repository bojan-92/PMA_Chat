<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="20"
    android:layout_marginTop="30dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/chat_message_photo_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:maxHeight="130dp"
        android:maxWidth="130dp"
        android:adjustViewBounds="true"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/chat_message_arrow_photo_content"
        android:visibility="gone"
        android:background="@drawable/message_wrapper"/>

    <ImageView
        android:id="@+id/chat_message_arrow_photo_content"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="32dp"
        android:visibility="gone"
        android:layout_toLeftOf="@+id/chat_profile_image"
        android:src="@drawable/message_arrow" />

    <VideoView
        android:id="@+id/chat_message_video_content"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:adjustViewBounds="true"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_alignParentLeft="true"
        android:visibility="gone"
        android:layout_toLeftOf="@+id/chat_message_arrow_video_content" />

    <ImageView
        android:id="@+id/chat_message_arrow_video_content"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="32dp"
        android:visibility="gone"
        android:layout_toLeftOf="@+id/chat_profile_image"
        android:src="@drawable/message_arrow" />

    <TextView
        android:id="@+id/chat_message_text_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/chat_message_arrow_text_content"
        android:background="@drawable/message_wrapper"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:padding="16dp"
        android:textColor="#fff"
        android:visibility="gone"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text="Mess" />

    <ImageView
        android:id="@+id/chat_message_arrow_text_content"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="32dp"
        android:visibility="gone"
        android:layout_toLeftOf="@+id/chat_profile_image"
        android:src="@drawable/message_arrow" />
<!--
    <TextView
        android:id="@+id/chatMessageAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:text="Name" />
-->


    <ImageView
        android:id="@+id/chat_profile_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/user_pacific" />

</RelativeLayout>