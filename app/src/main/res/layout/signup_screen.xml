<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvSignUp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorAccent"
        android:paddingTop="10dp"
        android:text="@string/signUpHeader"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/txtFirstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvSignUp"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:hint="@string/firstName"
        android:inputType="text" />

    <EditText
        android:id="@+id/txtLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtFirstName"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:hint="@string/lastName"
        android:inputType="text" />

    <EditText
        android:id="@+id/txtSignUpEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtLastName"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="@string/loginEmail"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/txtSignUpPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtSignUpEmail"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="@string/loginPassword"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/txtSignUpPasswordConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtSignUpPassword"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="@string/confirmPassword"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/datePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtSignUpPasswordConfirm"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:hint="@string/birthdayLabel"
        android:inputType="text"
        tools:ignore="TextViewEdits" />

    <EditText
        android:id="@+id/txtSelectedDateOfBirth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/datePicker"
        android:ems="10"
        android:hint="@string/selectedDateOfBirth"
        android:inputType="date" />

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtSelectedDateOfBirth"
        android:background="@color/colorAccent"
        android:text="@string/signUp"
        android:textColor="#FFF" />

    <TextView
        android:id="@+id/tvSignUpBackToLogin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/btnSignUp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25px"
        android:text="@string/signUpGoBackToLogin"
        android:textAlignment="center" />

</RelativeLayout>