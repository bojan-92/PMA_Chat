<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="20"
    android:layout_marginTop="30dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/chat_profile_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="0dp"
        android:layout_weight="3"
        android:src="@drawable/user_pacific" />

    <ImageView
        android:id="@+id/chat_message_arrow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="-30dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:src="@drawable/message_arrow_friend" />

    <ImageView
        android:id="@+id/chat_message_photo_content"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:padding="16dp"
        android:background="@drawable/message_wrapper_friend"/>

    <VideoView
        android:id="@+id/chat_message_video_content"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:padding="16dp"
        android:background="@drawable/message_wrapper_friend"/>

    <TextView
        android:id="@+id/chat_message_text_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="6"
        android:padding="16dp"
        tools:text="Message"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:background="@drawable/message_wrapper_friend"/>
<!--
    <TextView
        android:id="@+id/chatMessageAuthor"
