<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/usersTop"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorAccent"
        android:contextClickable="true"
        android:gravity="center_vertical"
        android:text="@string/userTitleEdit"
        android:textAlignment="center"
        android:textColor="#FFF" />

    <ImageView
        android:id="@+id/imageViewProfile"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/usersTop"
        android:background="@color/colorPrimaryDark"
        android:src="@drawable/ic_android_logo" />

    <EditText
        android:id="@+id/txtProfileSettingsFirstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageViewProfile"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:hint="@string/firstName"
        android:inputType="text" />

    <EditText
        android:id="@+id/txtProfileSettingsLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtProfileSettingsFirstName"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:hint="@string/lastName"
        android:inputType="text" />

